{
    "extends": "eslint:recommended",
    "root": true,
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "classes": false,
        "jsx": false,
        "superInFunctions": false
      }
    },
    "env": {
      "node": true,
      "mocha": true
    },
    "globals": {
      "requirejs": true,
      "Modernizr": true
    },
    "rules": {
      "array-bracket-spacing": 2,
      "curly": 2,
      "eqeqeq": 2,
      "indent": [2, 4, {"SwitchCase": 1}],
      "no-caller": 2,
      "no-console": 0,
      "no-eq-null": 2,
      "no-extend-native": 2,
      "no-multi-spaces": 2,
      "no-use-before-define": [2, "nofunc"],
      "object-curly-spacing": 2,
      "quotes": [2, "single", "avoid-escape"],
      "semi": 2,
      "space-in-parens": 2
    }
}
