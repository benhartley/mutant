{
    "extends": "eslint:recommended",
    "root": true,
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "classes": false,
        "jsx": false,
        "superInFunctions": false
      }
    },
    "env": {
      "es6": true,
      "browser": true,
      "mocha": true,
      "node": true
    },
    "globals": {
      "requirejs": true,
      "Modernizr": true
    },
    "rules": {
      // Best practice
      "no-use-before-define": [2, "nofunc"],
      "eqeqeq": 2,
      "no-eq-null": 2,
      "no-extend-native": 2,
      "no-caller": 2,
      "no-multi-spaces": 2,

      // Style
      "indent": [2, 4, {"SwitchCase": 1}],
      "curly": 2,
      "semi": 2,
      "quotes": [2, "single", "avoid-escape"],
      "space-in-parens": 2,
      "object-curly-spacing": 2,
      "array-bracket-spacing": 2,

      // ES6 Style
      "no-var": 2,
      "object-shorthand": 2,
      "prefer-arrow-callback": 2,
      "arrow-spacing": 2
    }
}
